<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_r16_outline"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvNumDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/_0_dias"
        android:textColor="@color/accentColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sem"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/come_ou_em"
                android:textAllCaps="true"
                android:textColor="@color/accentColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_data_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_dias"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:alpha=".1"
            android:background="@color/accentColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/alcan_ou_em"
                android:textAllCaps="true"
                android:textColor="@color/accentColor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_data_recorde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_dias"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>